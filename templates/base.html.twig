<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}Bienvenue!
			{% endblock %}
		</title>
		<link
		rel="stylesheet" href="{{ asset('build/bootstrap.css') }}">
		<!-- Intégration de FontAwesome -->
		<link
		href="https://cdn.jsdelivr.net/npm/@fortawesome/fontawesome-free/css/all.css" rel="stylesheet">
		<!-- Styles gérés par Webpack Encore -->
		{{ encore_entry_link_tags('app') }}
		<link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text><text y=%221.3em%22 x=%220.2em%22 font-size=%2276%22 fill=%22%23fff%22>sf</text></svg>">
		<link rel="stylesheet" href="/node_modules/@fullcalendar/core/main.css">
		<link rel="stylesheet" href="/node_modules/@fullcalendar/daygrid/main.css">
		<link
		rel="stylesheet" href="{{ asset('build/app.css') }}">
		<!-- Consolidated CSS -->
		<link rel="icon" href="{{ asset('favicon.ico') }}">
		<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
		<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
		{% block stylesheets %}
			<link rel="stylesheet" href="{{ asset('sidebar.css') }}">
		{% endblock %}
	</head>
	<body>
		{% include "partials/header.html.twig" %}
		{% block body %}

			<div>
				{% for message in app.flashes('success') %}
					<div class="alert alert-success">{{ message }}</div>
				{% endfor %}
				{% for message in app.flashes('error') %}
					<div class="alert alert-danger">{{ message }}</div>
				{% endfor %}
			</div>
		{% endblock %}

		{% include "partials/footer.html.twig" %}
		<script src="{{ asset('build/app.js') }}"></script>
		<!-- Consolidated JavaScript -->
		{% block javascripts %}
			<!-- Scripts gérés par Webpack Encore -->
			{{ encore_entry_script_tags('app') }}
		{% endblock %}
		<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
	</body>
</html>
