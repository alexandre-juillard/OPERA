{# J'utilise le layout de base pour cette vue et je prépare un formulaire pour la création d'un nouveau feedback. Une fois le formulaire soumis, l'utilisateur est redirigé vers la liste des feedbacks. #}
{% extends 'base_bo.html.twig' %}

{% block title %}Nouveau Feedback
{% endblock %}

{% block body %}
	{% if is_granted("BLOCKED") %}
		<p id="paragraphBlockedAccount">Votre compte est bloqué</p>
	{% else %}
		{% block content %}
			<h1>Créer un nouveau Feedback</h1>
			<div class="d-flex justify-content-end">
				<a href="{{ path('app_interview_show', {'id': app.request.query.get('interviewId')}) }}" class="btn btn-success">Retour</a>
			</div>

			{{ include('feedback/_form.html.twig') }}

		{% endblock %}
	{% endif %}
{% endblock %}
