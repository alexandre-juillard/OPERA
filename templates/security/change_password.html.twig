{% extends 'base.html.twig' %}

{% block title %}Changement de Mot de Passe
{% endblock %}
{% block body %}
	<style>

		#form {
			margin: auto;
			padding: 1rem 1rem 1rem 1.5rem;
			display: grid;
			grid-template-columns: 150px;
			border: 1px solid #DFDFDF;
		}

		#form button {
			height: 45px;
			border: none;
		}

		input {
			color: #DFDFDF;
			border: 0.5 solid black
		}

		input:focus {
			border: 5px solid #35d5fc;
			padding: 1px;

		}


		#form:nth-child(1) {
			width: 504px;
		}

		ul {
			width: 499px;
		}

		button[type="submit"] {
			background: #f2f1f1;

			background: #0d6efd;
			color: white;
			padding: 0.5rem 0.5rem 1rem;
			border-radius: 8px;
		}

		h1 {
			text-align: center;
			margin-bottom: 4rem;
		}

		h2 {
			font-size: 14px;
			border: 1.5px solid #f2f1f1;
			width: 506px;
			margin: auto;
			text-align: center;
			border-bottom: none;
			padding: 1rem 0;
			background: #F7F7F7;
			font-weight: normal
		}

		div {
			margin-bottom: 2rem;
		}


		li {
			color: red;
		}
	</style>
	<h1>Modification du mot de passe</h1>
	<div>
		<h2>Veuillez changer votre mot de passe</h2>
		{{form(form)}}
		</div>
	{% endblock %}
