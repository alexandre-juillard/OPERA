{% extends 'base_bo.html.twig' %}
{% block title %}Détails du Sentiment
{% endblock %}
{% block body %}
	<h1>Détails du Sentiment</h1>
	<table>
		<tr>
			<th>Date</th>
			<td>{{ employee_sentiment.date|date('Y-m-d') }}</td>
		</tr>
		<tr>
			<th>Sentiment</th>
			<td>{{ employee_sentiment.sentimentValue }}</td>
		</tr>
		<tr>
			<th>Commentaire</th>
			<td>{{ employee_sentiment.comment }}</td>
		</tr>
	</table>
	<a href="{{ path('app_employee_sentiments_edit', {'id': employee_sentiment.id}) }}" class="btn btn-primary">Éditer</a>
	<a href="{{ path('app_employee_sentiments_index') }}" class="btn btn-secondary">Retour à la liste</a>
{% endblock %}
