{% extends 'base_bo.html.twig' %}

{% block title %}Liste des Sentiments
{% endblock %}

{% block body %}
	<h1>Liste des Sentiments</h1>
	<table class="table">
		<thead class="thead-light">
			<tr>
				<th>Date</th>
				<th>Sentiment</th>
				<th>Commentaire</th>
				<th>Actions</th>
			</tr>
		</thead>
		<tbody>
			{% for sentiment in employee_sentiments %}

				<tr>
					<td>{{ sentiment.date|date('d/m/Y') }}</td>
					<td>{{ sentiment.sentimentValue }}</td>
					<td>{{ sentiment.comment }}</td>
					<td>
						<a href="{{ path('app_employee_sentiments_show', {'id': sentiment.id}) }}" class="btn btn-info">Voir</a>
						<a href="{{ path('app_employee_sentiments_edit', {'id': sentiment.id}) }}" class="btn btn-primary">Éditer</a>
						{% include "employee_sentiments/_delete_form.html.twig" %}
					</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>
	<a href="{{ path('app_employee_sentiments_new') }}" class="btn btn-success">Déclarer un sentiment</a>
{% endblock %}
